@page
@model MyFriends.Pages.AddModel
@{
  ViewData["Title"] = "Add a new friend";
}
<h1>Add a new friend</h1>
<form method="post">
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control form-control-sm" />                
    <span asp-validation-for="Name"></span>
  </div>
  <div class="form-group">
    <label asp-for="Age"></label>
    <input asp-for="Age" class="form-control form-control-sm" />                
    <span asp-validation-for="Age"></span>
  </div>
  <p class="actions">
    @* <input type="hidden" asp-for=".Id" /> *@
    <button class="btn btn-primary order-button">Add</button>
  </p>
</form>
@section scripts{
<partial name="_ValidationScriptsPartial"></partial>
}